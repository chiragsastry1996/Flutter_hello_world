[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=tab
tab_width=4

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=space
indent_size=4

[{*.mod,*.dtd,*.ent,*.elt}]
indent_style=space
indent_size=4

[{*.jhm,*.xslt,*.xul,*.rng,*.xsl,*.xsd,*.ant,*.tld,*.fxml,*.jrxml,*.xml,*.jnlp,*.wsdl}]
indent_style=space
indent_size=4

[*.json]
indent_style=space
indent_size=2

[*.java]
indent_style=space
indent_size=4

[{org.codehaus.groovy.runtime.ExtensionModule,*.properties}]
indent_style=space
indent_size=4

[{*.gy,*.groovy,*.gant,*.gradle,*.gdsl}]
indent_style=space
indent_size=4

[{*.h,*.cc,*.cpp,*.hpp,*.hxx,*.hh,*.cxx,*.inl,*.tcc,*.c,*.pch,*.cp}]
indent_style=space
indent_size=4

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2

[*.dart]
indent_style=space
indent_size=2

